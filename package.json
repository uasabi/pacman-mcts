{
  "name": "pacman_app",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "node dist/index.js",
    "build": "npm run clean && npm run copy && npm run initiate-html && npm run bundle",
    "copy": "cp -r src/* dist",
    "clean": "rm -rf dist && mkdir dist",
    "initiate-html": "npm run minify:html && npm run inline:css",
    "compile:sass": "sass --watch src/_sass:src/css",
    "inline:css": "critical src/indexmin.html --minify --inline --base src/ > dist/index.html",
    "minify:html": "html-minifier --collapse-whitespace --minify-css -o src/indexmin.html src/index.html",
    "bundle": "browserify src/js/main.js -o dist/js/script.js -t [ babelify --presets [ es2015 ] --plugins [transform-object-rest-spread]]",
    "sync": "node src/index.js & browser-sync start --proxy 'localhost:8080' --files 'src'",
    "lint": "eslint src/js/",
    "test": "jest"
  },
  "dependencies": {
    "babelify": "^7.3.0",
    "browserify": "^14.3.0",
    "critical": "^0.8.4",
    "express": "^4.15.3",
    "html-minifier": "^3.5.0",
    "jest-cli": "^20.0.4",
    "request": "^2.81.0"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "eslint": "^3.19.0"
  }
}
